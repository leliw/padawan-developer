{
    "Create project {project_name}": {
        "executer": "bash",
        "script": [
            {
                "command": "mkdir {project_name}"
            }
        ]
    },
    "Show projects": {
        "executer": "bash",
        "script": [
            {
                "command": "ls -l"
            }
        ]
    },
    "Delete project {project_name}": {
        "executer": "bash",
        "script": [
            {
                "command": "rm -R -f {project_name}"
            }
        ]
    },
    "Create readme": {
        "executer": "bash",
        "script": [
            {
                "cwd": "{project_name}",
                "command": "touch README.md; echo \"# {project_name}\" > README.md; ls",
                "out_regex": "(?P<readme_full_path>README.md)"
            }
        ]
    },    
    "Create frontend project": {
        "executer": "bash",
        "script": [
            {
                "cwd": "{project_name}",
                "command": "ng new frontend --routing"
            },
            {
                "cwd": "{project_name}/frontend",
                "command": "ng add @angular/material --skip-confirmation"
            }
        ]
    },
    "Select project {project_name}": {
        "executer": "bash",
        "script": [
            {
                "command": "ls -la",
                "cwd": "{project_name}",
                "out": ""
            }
        ]        
    },
    "Create service {service_name}": {
        "executer": "bash",
        "script": [
            {
                "cwd": "{project_name}/frontend",
                "command": "ng generate service services/{service_name}",
                "out_regex": "CREATE (?P<service_full_path>[^.]+.service.ts)"
            }
        ]
    },

    "Create backend project": {
        "executer": "bash",
        "script": [
            {
                "cwd":"{project_name}",
                "command": "mkdir backend"
            },
            {
                "cwd":"{project_name}/backend",
                "command": "python -m venv .env"
            },
            {
                "cwd":"{project_name}/backend",
                "command": "python -m pip install --upgrade pip"
            },
            {
                "cwd":"{project_name}/backend",
                "command": "pip install \"fastapi[all]\""
            },
            {
                "cwd":"{project_name}/backend",
                "command": "pip install \"uvicorn[standard]\""
            },
            {
                "cwd":"{project_name}/backend",
                "command": "pip install gunicorn"
            },
            {
                "cwd":"{project_name}/backend",
                "command": "pip freeze > requirements.txt"
            }


        ]
    },
    "prepare": {
        "executer": "bash",
        "script": [
            {
                "command": "node --version",
                "out": "v20.\\d+.\\d+"
            },
            {
                "command": "npm install npm"
            },
            {
                "command": "npm install @angular/cli"
            },
            {
                "command": "ng version"
            }
        ]
    }
}